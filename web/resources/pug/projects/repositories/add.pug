.modal-header
	h4.modal-title
		span(ng-if="!repo.id") 创建仓库
		span(ng-if="repo.id") 更新仓库

.modal-body
	form.form-horizontal
		.form-group
			label.control-label.col-sm-4 名称
			.col-sm-6
				input.form-control(type="text" ng-model="repo.name" placeholder="Friendly Repository Name")
		.form-group
			label.control-label.col-sm-4 仓库
			.col-sm-6
				input.form-control(type="text" ng-model="repo.git_url" placeholder="git@github.com:user/repo.git")
		.form-group
			label.control-label.col-sm-4 SSH密钥
			.col-sm-6
				select.form-control(ng-model="repo.ssh_key_id" ng-options="key.id as key.name for key in keys")
					option(value="") -- 选择 SSH Key --

.modal-footer
	button.btn.btn-default.pull-left(ng-click="$dismiss()") 关闭
	button.btn.btn-danger(ng-if="repo.id" ng-click="$close({ remove: true })") 删除
	button.btn.btn-success(ng-click="$close({ repo: repo })")
		span(ng-if="!repo.id") 创建
		span(ng-if="repo.id") 更新
