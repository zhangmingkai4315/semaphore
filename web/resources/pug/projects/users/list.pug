h3 Team
	button.btn.btn-success.pull-right.btn-xs(ng-click="addUser()") add team member

table.table
	thead: tr
		th 姓名
		th 用户名
		th 邮件地址
		th 管理员
	tbody: tr(ng-repeat="u in users" ng-class="{ info: u.id == user.id }")
		td {{ u.name }}
		td {{ u.username }}
		td {{ u.email }}
		td
			i.fa.fa-fw(ng-if="!project_user.admin" ng-class="{ 'fa-times': !u.admin, 'fa-check': u.admin }")
			.btn-group(ng-if="project_user.admin")
				button.btn.btn-xs.btn-default(ng-click="setAdmin(u)")
					i.fa.fa-fw(ng-class="{ 'fa-times': !u.admin, 'fa-check': u.admin }")
				button.btn.btn-danger.pull-right.btn-xs(ng-click="remove(u)") 删除